<!-- fx:controller="org.example.fintrackapps.uiController.LogViewer"-->

<SplitPane dividerPositions="0.5" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.fintrackapps.uiController.LogViewer">
   <items>
      <VBox fx:id="log" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
         <children>
            <GridPane prefHeight="994.0" prefWidth="727.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints maxHeight="215.0" minHeight="9.0" prefHeight="148.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="396.0" minHeight="10.0" prefHeight="320.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="609.0" minHeight="10.0" prefHeight="523.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Pane prefHeight="227.0" prefWidth="291.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <children>
                        <PieChart fx:id="pieChart" layoutX="38.0" layoutY="26.0" prefHeight="270.0" prefWidth="288.0" />
                     </children>
                  </Pane>
                  <Pane GridPane.rowIndex="1">
                     <children>
                        <BarChart fx:id="barChart" layoutX="-3.0" layoutY="39.0" prefHeight="283.0" prefWidth="370.0">
                          <xAxis>
                            <CategoryAxis side="BOTTOM" />
                          </xAxis>
                          <yAxis>
                            <NumberAxis side="LEFT" />
                          </yAxis>
                        </BarChart>
                     </children>
                  </Pane>
                  <TableView fx:id="catatanTV" prefHeight="200.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="2">
                    <columns>
                      <TableColumn fx:id="kategoriCatatanTC" prefWidth="75.0" text="Kategori" />
                      <TableColumn fx:id="hargaTC" prefWidth="75.0" text="Harga" />
                        <TableColumn fx:id="tanggalTC" prefWidth="75.0" text="Tanggal" />
                        <TableColumn fx:id="deskripsiTC" prefWidth="130.0" text="Deskripsi" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <VBox GridPane.valignment="TOP">
                     <children>
                        <Label fx:id="dateLabel" prefHeight="47.0" prefWidth="514.0">
                           <font>
                              <Font size="32.0" />
                           </font>
                        </Label>
                        <Label fx:id="highestSpendLabel" prefHeight="17.0" prefWidth="389.0" text="Total Pengeluaran:" />
                        <Label fx:id="highestInComeLabel" layoutX="10.0" layoutY="57.0" prefHeight="17.0" prefWidth="491.0" text="Total Pemasukan:" />
                        <Label fx:id="totalIncomeLabel" layoutX="10.0" layoutY="74.0" prefHeight="17.0" prefWidth="527.0" text="Pengeluaran Terbesar: " />
                        <Label fx:id="totalSpendLabel" layoutX="10.0" layoutY="91.0" prefHeight="17.0" prefWidth="527.0" text="PemasukanTerbesar: " />
                     </children>
                  </VBox>
               </children>
            </GridPane>
         </children>
      </VBox>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
         <children>
            <Button mnemonicParsing="false" onAction="#exportLog" text="Export to PDF">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin></Button>
         </children>
      </VBox>
   </items>
</SplitPane>
